@model ORMTester.Models.Shop

@{
    ViewData["Title"] = "Shop Details";
}

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
</div>

<h2>Products</h2>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.ProductType</td>
                    <td>
                        <a href="@Url.Action("Edit", "Products", new { id = product.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Products", new { id = product.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found for this shop.</p>
}

<a href="@Url.Action("Index", "Shops")" class="btn btn-secondary">Back to Shops</a>
